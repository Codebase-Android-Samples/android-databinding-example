<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="KotlinActivityBinding">

        <variable
            name="kotlinVM"
            type="com.databindingex.aromal.databindingexample.models.viewmodels.KotlinVM">

        </variable>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.databindingex.aromal.databindingexample.JavaActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"

            android:text="@{kotlinVM.username1}"
            app:layout_constraintBottom_toTopOf="@+id/nameTextView"
            app:layout_constraintLeft_toLeftOf="@+id/nameTextView"
            app:layout_constraintRight_toRightOf="@+id/nameTextView" />

        <EditText
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="username"
            android:text="@={kotlinVM.username1}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/buttonSubmit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Button"
            app:layout_constraintLeft_toLeftOf="@+id/nameTextView"
            app:layout_constraintRight_toRightOf="@+id/nameTextView"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView" />


    </android.support.constraint.ConstraintLayout>

</layout>
